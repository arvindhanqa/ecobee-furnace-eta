@using EcobeeFurnaceEta.Blazor.Models

<div class="card card-temperature">
    <div class="card-header">
        <div class="card-icon">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
                <path d="M15 13V5c0-1.66-1.34-3-3-3S9 3.34 9 5v8c-1.21.91-2 2.37-2 4 0 2.76 2.24 5 5 5s5-2.24 5-5c0-1.63-.79-3.09-2-4zm-4-8c0-.55.45-1 1-1s1 .45 1 1h-1v1h1v2h-1v1h1v2h-2V5z"/>
            </svg>
        </div>
        <span class="card-title">Temperature</span>
    </div>
    <div class="card-body">
        <div class="temp-display">
            <span class="temp-current">@CurrentTempF.ToString("F1")°</span>
            <span class="temp-unit">F</span>
        </div>
        <div class="temp-details">
            <div class="temp-row">
                <span class="temp-label">Target:</span>
                <span class="temp-value target">@SetpointF.ToString("F1")°F</span>
            </div>
            <div class="temp-row">
                <span class="temp-label">Outside:</span>
                <span class="temp-value outside">@OutdoorTempF.ToString("F1")°F</span>
            </div>
            <div class="temp-row">
                <span class="temp-label">Humidity:</span>
                <span class="temp-value">@HumidityPercent.ToString("F0")%</span>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public double CurrentTempF { get; set; }
    [Parameter] public double SetpointF { get; set; }
    [Parameter] public double OutdoorTempF { get; set; }
    [Parameter] public double HumidityPercent { get; set; }
}
